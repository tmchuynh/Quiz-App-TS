{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src/**",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "allowUmdGlobalAccess": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}